/* pages/home/home.wxss */

.search-wrapper {
    display: flex;
    height: 80rpx;
    background-color: #42BD55;
    align-items: center;
    margin-bottom: 30rpx;
}

.search {
    display: flex;
    width: 100%;
    height: 60rpx;
    background-color: white;
    margin: 0 15rpx;
    border-radius: 10rpx;
    justify-content: center;
    align-items: center;
}

.search {
    color: #B6B6B6;
}

.search image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
}

.title-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0rpx 25rpx;
}

.title-wrapper .title {
    color: #494949;
    font-size: 36rpx;
    font-weight: bold;
}

.title-wrapper .more {
    display: flex;
    align-items: center;
    color: #11AF1D;
}

.title-wrapper .arrow {
    width: 14rpx;
    height: 14rpx;
    margin-left: 6rpx;
    border: 2px solid #11AF1D;
    border-left: none;
    border-bottom: none;
    transform: rotate(45deg);
}

.row {
    margin-bottom: 30rpx;
    height: 396rpx;
}

.items {
    margin-top: 30rpx;
    white-space: nowrap;
}

.items .item {
    margin-left: 25rpx;
}

.items .item:last-of-type {
    margin-right: 30rpx;
}