/* pages/login/login.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 20rpx;
}

.logo {
    width: 144rpx;
    height: 144rpx;
    margin: 50rpx 0;
}

.btn-login {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
}

.wechat {
    background-color: #42BD55;
    color: #ffffff;
    border-radius: 10rpx;
}

.douban {
    margin-top: 30rpx;
    background-color: #ffffff;
    color: #42BD55;
    border: 2rpx solid #42BD55;
    border-radius: 10rpx;
}

.agreement {
    display: flex;
    color: #9d9d9d;
    font-size: 24rpx;
    position: absolute;
    bottom: 100rpx;
}

.agreement .open {
    color: #4bb65c;
    margin-left: 10rpx;
}