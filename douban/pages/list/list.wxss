/* pages/list/list.wxss */

.container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}

.item {
    display: inline-flex;
    flex-direction: column;
    width: 160rpx;
    margin: 0 30rpx 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item:last-of-type {
    margin-right: 30rpx;
}

.hide {
    visibility: hidden;
}