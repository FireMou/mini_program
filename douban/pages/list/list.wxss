/* pages/list/list.wxss */

.container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}

.item {
    display: inline-flex;
    flex-direction: column;
    width: 160rpx;
    margin: 0 30rpx 20rpx;
}

.item:last-of-type {
    margin-right: 30rpx;
}

.item .playbill {
    width: 100%;
    height: 223rpx;
    margin-bottom: 15rpx;
}

.item .title {
    width: 100%;
    color: #191919;
    font-weight: bold;
    /* font-size: 30rpx; */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item .score {
    display: flex;
    align-items: center;
}

.score .star {
    width: 24rpx;
    height: 24rpx;
}

.item .number {
    margin-left: 6rpx;
    color: #787878;
    font-size: 24rpx;
}