page {
    height: 100%;
}

.container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.version {
    /* position: absolute;
    bottom: 30rpx; */
    font-size: 24rpx;
    color: #c9c9c9;
    /* width: 100%; */
    text-align: center;
    margin: 40rpx 0;
}

.login-wrapper {
    position: relative;
    width: 100%;
    height: 400rpx;
    /* background-color: red; */
    display: flex;
    justify-content: center;
    align-items: center;
}

.login-wrapper .login {
    color: #1e4826;
    background-color: #fff;
    border-radius: 50rpx;
    height: 100rpx;
    width: 350rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 40rpx;
    box-shadow: 4rpx 4rpx 4rpx rgba(0, 0, 0, 0.2);
}

.login-wrapper image {
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
}

.items-wrapper {
    margin-top: 20rpx;
}

.items-wrapper .arrow {
    width: 20rpx;
    height: 20rpx;
    margin-left: 10rpx;
    border: 2px solid #818181;
    border-left: none;
    border-bottom: none;
    transform: rotate(45deg);
}

.title-wrapper {
    display: flex;
    justify-content: space-between;
    padding-left: 30rpx;
    padding-right: 30rpx;
    align-items: center;
}

.title-wrapper .title {
    color: #161616;
}

.title-wrapper .check {
    display: flex;
    font-size: 30rpx;
    color: #818181;
    align-items: center;
}

.items .info-wrapper {
    flex: 1;
    margin-right: 20rpx;
    position: relative;
}

.items .item {
    display: flex;
    align-items: center;
    padding-top: 30rpx;
}


/* .items:last-of-type .divider {
    visibility: hidden;
    display: none;
} */

.item .icon {
    width: 54rpx;
    height: 54rpx;
    padding-left: 30rpx;
}

.info-wrapper .info {
    display: flex;
    align-items: center;
}

.info .left {
    margin-left: 40rpx;
}

.info .left .top {
    color: #191919;
    font-size: 28rpx;
}

.info .left .bottom {
    display: flex;
    color: #818181;
    align-items: flex-end;
}

.info .left .count {
    font-size: 48rpx;
}

.info .left .count-des {
    padding-bottom: 10rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
}

.info .right {
    display: flex;
    flex: 1;
    justify-content: flex-end;
}

.info .right .des {
    color: #BBBBBB;
    font-size: 28rpx;
    margin-right: 40rpx;
}

.info .right .open-wrapper {
    display: flex;
    align-items: center;
    padding-right: 10rpx;
}

.info .right .open {
    font-size: 28rpx;
    color: #4C4C4C;
    background-color: #F5F5F5;
    padding: 10rpx 15rpx;
    border-radius: 10rpx;
}

.item .divider {
    width: 100%;
    height: 2rpx;
    background-color: rgba(0, 0, 0, .1);
    position: absolute;
    margin-top: 10rpx;
}